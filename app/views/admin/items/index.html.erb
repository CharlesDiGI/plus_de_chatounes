<div class="ecommerce-page">
    <div class="wrapper">
        <div class="main">
            <div class="section" id='img-ancre'>
                <div class="container">
                    <h2 class="section-title">Toutes nos images disponibles</h2>
                        <div class="col-md-12">
                            <div class="row">
                              <% @items.each do |item| %>
                                <div class="col-lg-4 col-md-6">
                                    <div class="card-index">
                                        <div>
                                            <%= link_to admin_item_path(item.id) do %>
                                                <%= image_tag(item.image) if item.image.attached? %>
                                            <% end %>
                                        </div>
                                        <div class="card-body">
                                            <h4 class="title-card"><%= item.title %></h4>
                                            <p class="description-card">
                                                <%= item.description %>
                                            </p>                                       
                                            <div class="price-container">
                                                <span class="price"> &euro; <%= item.price %></span>
                                            </div> 
                                        </div>
                                    </div>
                                </div>
                              <% end %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>