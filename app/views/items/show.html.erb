<div class="container">

  <div class="row">
  	<div class="col mt-2">
  		<h2 class="title"><%= @item.title %></h2>
			<p id="notice"><%= notice %></p>
  	</div>
  </div>
	
	<div class="row mb-3">
		<div class="col-md-5 mr-auto">
	  	<img src="<%= @item.image_url %>">
		</div>

		<div class="col-md-7">
			<h5 class="category">Description</h5>
			<p><%= @item.description %></p>
		</div>
	</div>
	
	<div class="row align-items-center ">


		<div class="col-md-2 ml-auto text-center">
			<span class="title"><%= @item.price %> â‚¬</span>
		</div>

		<div class="col-md-2">
			<button class="btn btn-lg btn-primary">Add to cart</button>
			<%= button_to "Add to cart", item_join_table_cart_items_path(@item.id), method: :post %>
			<%= button_to "Create order", orders_path, method: :post %>
		</div>
	</div>

	<div class="row mt-5">
		<div class="col-md text-right">
			<%= link_to 'Edit', edit_item_path(@item) %> |
			<%= link_to 'Back', items_path %>
		</div>
	</div>

</div>
 