<div class="ecommerce-page">
    <div class="wrapper">
    <div class='banner'>
    </div>
        <div class="main">
            <div class="section">
                <div class="container">
                    <h2 class="section-title">Toutes nos images disponibles</h2>
                        <div class="col-md-12">
                            <div class="row">
                              <% @items.each do |item| %>
                                <div class="col-lg-4 col-md-6">
                                    <div class="card-index">
                                        <div>
                                            <%= link_to image_tag(item.image_url), item_path(item.id) %> 
                                        </div>
                                        <div class="card-body">
                                            <h4 class="title-card"><%= item.title %></h4>
                                            <p class="card-description">
                                                <%= item.description %>
                                            </p>                                       
                                            <div class="price-container">
                                                <span class="price"> &euro; <%= item.price %></span>
                                            </div> 
                                        </div>
                                    </div>
                                </div>
                              <% end %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>